{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "allowJs": true,
      "baseUrl": ".",
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "paths": {
          "*": [
              "node_modules/*"
          ]
      }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "ts-node": {
      "files": true
  },
} 